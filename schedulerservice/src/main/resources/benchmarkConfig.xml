<?xml version="1.0" encoding="UTF-8"?>
<plannerBenchmark>
    <benchmarkDirectory>local/benchmark</benchmarkDirectory>

    <inheritedSolverBenchmark>
        <problemBenchmarks>
            <solutionFileIOClass>com.tracktik.scheduler.service.SchedulerSolutionFileIO</solutionFileIOClass>
            <inputSolutionFile>data/parameterized.json</inputSolutionFile>
            <writeOutputSolutionEnabled>true</writeOutputSolutionEnabled>
            <problemStatisticType>SCORE_CALCULATION_SPEED</problemStatisticType>
            <problemStatisticType>MOVE_COUNT_PER_STEP</problemStatisticType>
            <problemStatisticType>MEMORY_USE</problemStatisticType>
        </problemBenchmarks>
        <solver>
            <scanAnnotatedClasses/>

            <!-- Score configuration -->
            <scoreDirectorFactory>
                <scoreDrl>schedulerScoreRules.drl</scoreDrl>
            </scoreDirectorFactory>

            <termination>
                <minutesSpentLimit>1</minutesSpentLimit>
                <unimprovedSecondsSpentLimit>10</unimprovedSecondsSpentLimit>
            </termination>

        </solver>

    </inheritedSolverBenchmark>

    <solverBenchmark>
        <name>Basic</name>
        <solver>

            <constructionHeuristic />
            <localSearch/>

        </solver>
    </solverBenchmark>

</plannerBenchmark>