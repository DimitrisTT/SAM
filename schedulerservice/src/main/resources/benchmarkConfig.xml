<?xml version="1.0" encoding="UTF-8"?>
<plannerBenchmark>
    <benchmarkDirectory>local/benchmark</benchmarkDirectory>


    <inheritedSolverBenchmark>
        <problemBenchmarks>
            <solutionFileIOClass>com.tracktik.scheduler.service.SchedulerSolutionFileIO</solutionFileIOClass>
            <inputSolutionFile>data/thursday.json</inputSolutionFile>
            <!-- <inputSolutionFile>schedulerapi/src/main/resources/examples.txt</inputSolutionFile> -->
            <!-- <inputSolutionFile>schedulerservice/src/main/resources/AR-Report-10.txt</inputSolutionFile> -->
            <writeOutputSolutionEnabled>true</writeOutputSolutionEnabled>
        </problemBenchmarks>
        <solver>
            <scanAnnotatedClasses/>

            <!-- Score configuration -->
            <scoreDirectorFactory>
                <scoreDrl>schedulerScoreRules.drl</scoreDrl>
            </scoreDirectorFactory>

            <termination>
                <minutesSpentLimit>1</minutesSpentLimit>
                <unimprovedSecondsSpentLimit>10</unimprovedSecondsSpentLimit>
            </termination>

        </solver>

    </inheritedSolverBenchmark>

    <solverBenchmark>
        <name>Basic</name>
        <solver>

            <constructionHeuristic>

            </constructionHeuristic>
            <localSearch/>

        </solver>
    </solverBenchmark>

